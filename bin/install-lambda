#!/bin/bash
# install all the stuff to run lambda

BLUE='\033[0;34m'
NC='\033[0m' # No color


# update the packages
sudo apt update
# install the needed aplications
sudo apt install -y python3-pip tmux

# download the python libraries
pip3 install -r requirements.txt

# append Lambda/bin to path
echo "export PATH=/home/omarsaldanna/Lambda/bin:$PATH" >> ~/.bashrc
# and make executable the files
chmod 700 bin/*

# send the final messages
echo ""
echo -e "${BLUE}Lambda Î» Basic Configuration Made${NC}"
echo "All your custom settings are up to you"
echo ""
echo "You need to set a lambda checkpoint with"
echo -e "${BLUE}lambda checkpoint backup.tar.gz ${NC}"
echo ""
echo "Add this settins to your cron"
echo "0 5 * * * tmuxer 'lambda-reboot' 'lambda reboot'"
echo "50 4 * * 0 tmuxer 'lambda-backup' 'lambda backup'"
echo "and remember to change the PATH in cron"